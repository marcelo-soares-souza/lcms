<ul class="nav nav-tabs">
  <li class="nav-item">
    <%= link_to "Todos", users_path, :class => "nav-link" %>
  </li>
  <li class="nav-item">
    <%= link_to @user.fullname, user_path(@user.id), :class => "nav-link active" %>
  </li>
</ul>

<br/>

<div class="tab-content">
  <div class="tab-pane active">
    <dl class="row">
      <dt class="col-sm-3"><strong>Avatar:</strong></dt>
      <dd class="col-sm-9"><%= image_tag Gravatar.new(@user.email).image_url %>&nbsp;</dd>

      <dt class="col-sm-3"><strong>Name:</strong></dt>
      <dd class="col-sm-9"><%= @user.fullname %>&nbsp;</dd>

      <dt class="col-sm-3"><strong>E-Mail:</strong></dt>
      <dd class="col-sm-9"><%= @user.email %>&nbsp;</dd>

      <dt class="col-sm-3"><strong>Administrador:</strong></dt>
      <dd class="col-sm-9"><%= t("#{@user.admin}_value") %>&nbsp;</dd>
    </dl>

    <hr/>
    <% if user_signed_in? %>
      <% if current_user.admin? %>
        <div class="form-actions">
          <%= link_to t('.back', :default => "Voltar"), users_path, :class => 'btn btn-success'  %>
          <!-- <%= link_to t('.edit', :default => "Editar"), edit_user_path(@user), :class => 'btn btn-warning' %> -->
          <%= link_to t('.destroy', :default => "Apagar"), user_path(@user), :method => 'delete', :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'VocÃª tem Certeza?')) }, :class => 'btn btn-danger' %>
        </div>
      <% end %>
    <% end %>
  </div>
</div>
